apiVersion: v1
kind: Secret
metadata:
  name: rails-secret-key
type: Opaque
data:
  SECRET_KEY_BASE: <rails SECRET_KEY_BASE in base64>
---
apiVersion: v1
kind: Secret
metadata:
  name: database-password
type: Opaque
data:
  DATABASE_PASSWORD: <psql DATABASE_PASSWORD in base64>
---
apiVersion: v1
kind: Secret
metadata:
  name: grafana-password
type: Opaque
data:
  GRAFANA_PASSWORD: <grafana password in base64>
---
apiVersion: v1
kind: Secret
metadata:
  name: rails-tls
type: kubernetes.io/tls
data:
  tls.crt: <base64-encoded-cert from secrets/ingress_tls_certs/>
  tls.key: <base64-encoded-key from secrets/ingress_tls_certs/>

# base64 -w 0 k8s/secrets/ingress_tls_certs/server.crt > k8s/secrets/ingress_tls_certs/server.crt.b64
