<% modal_id = transaction ? dom_id(transaction, :status) : "txn_modal" %>
<div id="<%= modal_id %>" class="bg-white w-96 p-6 rounded-lg relative shadow-xl flex flex-col items-center justify-center space-y-4">
  <% case transaction&.status %>
  <% when "pending" %>
    <img src="https://media.tenor.com/On7kvXhzml4AAAAj/loading-gif.gif" alt="Processing..." class="h-16 w-16" />
  <% when "successful" %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>
  <% else %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  <% end %>

  <p class="text-center text-gray-800 text-lg font-medium"><%= response[:message] %></p>

  <button id="close-button" data-controller="modal" data-action="click->modal#close" class="close-button">
    Close
  </button>
</div>
